{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "esnext",
    "lib": ["es2017", "esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@csnow/*": ["app/javascript/*"]
    }
  },
  "exclude": ["**/*.spec.ts", "node_modules", "public"]
}
